        <activity
            android:name="com.htutmyat.mdyfooddirectory.SplashActivity"
            android:label="@string/title_activity_splash" >
          <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
          </intent-filter>
        </activity>
    </application>

</manifest>
