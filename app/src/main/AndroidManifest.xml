    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.htutmyat.mdyfooddirectory.FirstActivity"
            android:label="@string/app_name" >

        </activity>
        <activity
            android:name="com.htutmyat.mdyfooddirectory.SecondActivity"
            android:label="@string/title_activity_second"
            android:parentActivityName="com.htutmyat.mdyfooddirectory.FirstActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.htutmyat.mdyfooddirectory.FirstActivity" />
